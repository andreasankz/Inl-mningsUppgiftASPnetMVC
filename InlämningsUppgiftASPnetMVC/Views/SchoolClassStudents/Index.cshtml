@model IEnumerable<InlämningsUppgiftASPnetMVC.Entities.SchoolClassStudent>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2 class="mt-4">Students in Class</h2>

    <p class="mt-4">
        <a class="btn btn-primary" asp-action="Create">Add Student</a>
        
    </p>
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SchoolClass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentId)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolClass.ClassName)
                    </td>
                    <td>
                       @Html.DisplayFor(modelItem => item.StudentId)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-2 px-2">
        <a asp-controller="Classes" asp-action="Index">Back to List</a>
    </div>

</div>
